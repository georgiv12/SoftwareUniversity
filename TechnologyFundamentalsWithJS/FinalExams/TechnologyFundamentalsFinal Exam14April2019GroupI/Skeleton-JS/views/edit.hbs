<div class="wrapper">
    <form class="mountaineer-create" action="/edit/{{mountaineer._id}}" method="post">
        <div class="create-header">
            Edit Mountaineer
        </div>
        <div class="create-mountaineeritem">
            <div class="create-mountaineeritem-label">Name</div>
            <input type="text" class="create-mountaineeritem-content" name="name" value="{{mountaineer.name}}"
                   required/>
        </div>
        <div class="create-mountaineeritem">
            <div class="create-mountaineeritem-label">Age</div>
            <input type="number" min="1" class="create-mountaineeritem-content" name="age" value="{{mountaineer.age}}"
                   required/>
        </div>

        <div class="create-mountaineeritem">
            <div class="create-mountaineeritem-label">Gender</div>
            {{#ifCond mountaineer.gender "Male" }}
                <div class="gender-select">
                    <div class="radio-div">
                        <input class="radio-input" type="radio" name="gender" value="Male" id="male" checked>
                        <label class="radio-label" for="male">Male</label>
                    </div>
                    <div class="radio-div">
                        <input class="radio-input" type="radio" name="gender" value="Female" id="female">
                        <label class="radio-label" for="female">Female</label>
                    </div>
                </div>
            {{/ifCond}}
            {{#ifCond mountaineer.gender "Female" }}
                <div class="gender-select">
                    <div class="radio-div">
                        <input class="radio-input" type="radio" name="gender" value="Male" id="male">
                        <label class="radio-label" for="male">Male</label>
                    </div>
                    <div class="radio-div">
                        <input class="radio-input" type="radio" name="gender" value="Female" id="female" checked>
                        <label class="radio-label" for="female">Female</label>
                    </div>
                </div>
            {{/ifCond}}
        </div>

        <div class="create-mountaineeritem">
            <div class="create-mountaineeritem-label">Last Seen Date</div>
            <input type="date" class="create-mountaineeritem-content" name="lastSeenDate"
                   value="{{mountaineer.lastSeenDate}}" required/>
        </div>

        <div class="create-button-holder">
            <button type="submit" class="button">Edit Mountaineer</button>
            <a type="button" href="/" class="button">Back</a>
        </div>
    </form>
</div>