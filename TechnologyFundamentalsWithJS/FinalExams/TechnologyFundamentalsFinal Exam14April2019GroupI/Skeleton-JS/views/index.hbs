<div class="wrapper">
    <h1>Himalayas Rescue Register</h1>

    <div class="button-holder">
        <a type="button" href="/create" class="button">Register a New Mountaineer</a>
    </div>
    <div class="content">
        <div class="header">
            <div class="mountaineer-label">Name</div>
            <div class="mountaineer-label">Age</div>
            <div class="mountaineer-label">Last Seen Date</div>
            <div class="actions-label">Actions</div>
        </div>
        <div class="main">
            {{#each mountaineers}}
                <div class="mountaineer">
                    <div class="mountaineer-item">
                        {{name}}
                    </div>
                    <div class="mountaineer-item">
                        {{age}}
                    </div>
                    <div class="mountaineer-item">
                        {{lastSeenDate}}
                    </div>
                    <div class="mountaineer-item mountaineer-actions">
                        <a type="button" href="/edit/{{id}}" class="mountaineerbutton">Edit</a>
                        <a type="button" href="/delete/{{id}}" class="mountaineerbutton">Remove</a>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
</div>